{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2022"
    ],
    "target": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["data/components/*"]
    },
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "experimentalDecorators": true
  }
}